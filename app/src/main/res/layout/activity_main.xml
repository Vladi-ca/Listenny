<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mainBackground"
    tools:context="com.example.android.listenny.MainActivity">

    <include layout="@layout/share" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/my_action_bar"
        android:layout_below="@+id/layout_share"
        android:paddingLeft="@dimen/main_scrollView_padding"
        android:paddingRight="@dimen/main_scrollView_padding"
        android:paddingTop="@dimen/scroll_view_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/layout_main_paddingRight"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.support.v7.widget.CardView style="@style/cardViewMenu">

                    <LinearLayout
                        style="@style/cardViewLinearLayout"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/recent"
                            style="@style/iconCardViewMenu"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/zero"
                            android:layout_marginBottom="@dimen/layout_main_cardView_icon_marginBottom"
                            android:src="@drawable/recent" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/zero"
                            android:layout_weight="0.5"
                            android:fontFamily="Nunito"
                            android:gravity="center"
                            android:text="Recent"
                            android:textSize="@dimen/layout_main_textSize_cardView" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView style="@style/cardViewMenu">

                    <LinearLayout
                        style="@style/cardViewLinearLayout"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/zero"
                            android:layout_marginBottom="@dimen/layout_main_cardView_icon_marginBottom"
                            android:layout_weight="2"
                            android:src="@drawable/playlists" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/zero"
                            android:layout_weight="0.5"
                            android:fontFamily="Nunito"
                            android:gravity="center"
                            android:text="Playlists"
                            android:textSize="@dimen/layout_main_textSize_cardView" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView style="@style/cardViewMenu">

                    <LinearLayout
                        style="@style/cardViewLinearLayout"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/zero"
                            android:layout_marginBottom="@dimen/layout_main_cardView_icon_marginBottom"
                            android:layout_weight="2"
                            android:src="@drawable/rooms" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/zero"
                            android:layout_weight="0.5"
                            android:fontFamily="Nunito"
                            android:gravity="center"
                            android:text="Rooms"
                            android:textSize="@dimen/layout_main_textSize_cardView" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView style="@style/cardViewMenu">

                    <LinearLayout
                        style="@style/cardViewLinearLayout"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/zero"
                            android:layout_marginBottom="@dimen/layout_main_cardView_icon_marginBottom"
                            android:layout_weight="2"
                            android:src="@drawable/records" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/zero"
                            android:layout_weight="0.5"
                            android:fontFamily="Nunito"
                            android:gravity="center"
                            android:text="Records"
                            android:textSize="@dimen/layout_main_textSize_cardView" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView style="@style/cardViewMenu">

                    <LinearLayout
                        style="@style/cardViewLinearLayout"
                        android:padding="@dimen/description_main_cardView_padding">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="Nunito"
                            android:gravity="center"
                            android:text="@string/description_menu_one"
                            android:textSize="@dimen/description_main_textSize" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView style="@style/cardViewMenu">

                    <LinearLayout
                        style="@style/cardViewLinearLayout"
                        android:padding="@dimen/description_main_cardView_padding">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="Nunito"
                            android:gravity="center"
                            android:text="@string/description_menu_two"
                            android:textSize="@dimen/description_main_textSize" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.support.v7.widget.CardView style="@style/cardViewMenu">

                    <LinearLayout
                        style="@style/cardViewLinearLayout"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/zero"
                            android:layout_marginBottom="@dimen/layout_main_cardView_icon_marginBottom"
                            android:layout_weight="2"
                            android:src="@drawable/shares" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/zero"
                            android:layout_weight="0.5"
                            android:fontFamily="Nunito"
                            android:gravity="center"
                            android:text="Shares"
                            android:textSize="@dimen/layout_main_textSize_cardView" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView style="@style/cardViewMenu">

                    <LinearLayout
                        style="@style/cardViewLinearLayout"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/zero"
                            android:layout_marginBottom="@dimen/layout_main_cardView_icon_marginBottom"
                            android:layout_weight="2"
                            android:src="@drawable/network" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/zero"
                            android:layout_weight="0.5"
                            android:fontFamily="Nunito"
                            android:gravity="center"
                            android:text="Network"
                            android:textSize="@dimen/layout_main_textSize_cardView" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView style="@style/cardViewMenu">

                    <LinearLayout
                        style="@style/cardViewLinearLayout"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/zero"
                            android:layout_marginBottom="@dimen/layout_main_cardView_icon_marginBottom"
                            android:layout_weight="2"
                            android:src="@drawable/messages" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/zero"
                            android:layout_weight="0.5"
                            android:fontFamily="Nunito"
                            android:gravity="center"
                            android:text="Messages"
                            android:textSize="@dimen/layout_main_textSize_cardView" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView style="@style/cardViewMenu">

                    <LinearLayout
                        style="@style/cardViewLinearLayout"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/zero"
                            android:layout_marginBottom="@dimen/layout_main_cardView_icon_marginBottom"
                            android:layout_weight="2"
                            android:src="@drawable/equaliser" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/zero"
                            android:layout_weight="0.5"
                            android:fontFamily="Nunito"
                            android:gravity="center"
                            android:text="Equaliser"
                            android:textSize="@dimen/layout_main_textSize_cardView" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView style="@style/cardViewMenu">

                    <LinearLayout
                        style="@style/cardViewLinearLayout"
                        android:padding="@dimen/description_main_cardView_padding">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="Nunito"
                            android:gravity="center"
                            android:text="@string/description_menu_three"
                            android:textSize="@dimen/description_main_textSize" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView style="@style/cardViewMenu">

                    <LinearLayout
                        style="@style/cardViewLinearLayout"
                        android:padding="@dimen/description_main_cardView_padding">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="Nunito"
                            android:gravity="top"
                            android:text="@string/description_menu_four"
                            android:textSize="@dimen/description_main_textSize" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <include
        android:id="@+id/my_action_bar"
        layout="@layout/action_bar" />

    <include layout="@layout/playing_float" />

</RelativeLayout>
