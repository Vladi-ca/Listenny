<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
style="@style/cardViewPlay"
android:layout_width="@dimen/playing_width"
android:layout_height="@dimen/playing_height"
android:layout_above="@+id/my_action_bar"
android:layout_alignParentRight="true"
android:layout_marginBottom="@dimen/playing_marginBottom"
android:layout_marginRight="@dimen/playing_marginRight"
android:elevation="@dimen/playing_elevation">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/play_float"
        android:layout_width="@dimen/playing_play_icon_width"
        android:layout_height="match_parent"
        android:src="@drawable/ic_play_circle_filled_black_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="Nunito"
            android:text="@string/playing_artist_name"
            android:textSize="@dimen/playing_artist_textSize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="Nunito"
            android:text="@string/playing_song_name"
            android:textColor="@color/playingSong"
            android:textSize="@dimen/playing_song_textSize" />

    </LinearLayout>

</LinearLayout>

</android.support.v7.widget.CardView>